<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.MyAppTheme</item>
        <item name="android:textViewStyle">@style/AppTheme.TextAppearance</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="alertDialogStyle">@style/AlertDialogCustom</item>
    </style>

    <style name="AppTheme.TextAppearance" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="AppTheme.TextAppearance.Inverse" parent="@android:style/TextAppearance.Inverse">
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="AppTheme.ButtonTextAppearance" parent="AppTheme.TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:fontWeight">300</item>
        <item name="fontWeight">300</item>
    </style>

    <style name="AppTheme.Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/AppTheme.ButtonTextAppearance</item>
    </style>

    <style name="ActionBar.Solid.MyAppTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="alertDialogStyle">@style/AlertDialogCustom</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="android:windowTitleStyle">@style/AlertDialogTitle</item>
    </style>

    <style name="AlertDialogTitle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAppearance">@style/AppTheme.TextAppearance</item>
    </style>

</resources>
