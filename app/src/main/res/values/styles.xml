<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDarkVariant</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/AppTheme.TextAppearance</item>
        <item name="materialButtonStyle">@style/AppTheme.ActivePrimaryButton</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="alertDialogStyle">@style/AlertDialogCustom</item>
        <item name="bottomSheetDialogTheme">@style/BaseBottomSheetDialog</item>+
    </style>

    <style name="AppTheme.TextAppearance" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="AppTheme.TextAppearance.Inverse" parent="@android:style/TextAppearance.Inverse">
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="AppTheme.ButtonTextAppearance" parent="AppTheme.TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">300</item>
        <item name="fontWeight">300</item>
    </style>

    <style name="AppTheme.ActivePrimaryButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/AppTheme.ButtonTextAppearance</item>
        <!--<item name="backgroundTint">@color/secondary</item>-->
        <item name="android:backgroundTint">@drawable/primary_button_selector_background</item>
        <item name="android:textColor">@drawable/primary_button_selector_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="cornerRadius">@dimen/main_button_height</item>
        <item name="android:elevation">4dp</item>
        <item name="android:lineSpacingExtra">16sp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AppTheme.ActiveSecondaryButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:elevation">0dp</item>
        <item name="android:textAppearance">@style/AppTheme.ButtonTextAppearance</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textAllCaps">true</item>
        <item name="cornerRadius">@dimen/main_button_height</item>
        <item name="strokeColor">@color/strokeDark</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dialog_background</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>


    <style name="AppTheme.WithActionBar" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDarkVariant</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:textViewStyle">@style/AppTheme.TextAppearance</item>
        <item name="materialButtonStyle">@style/AppTheme.ActivePrimaryButton</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="alertDialogStyle">@style/AlertDialogCustom</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme.WithActionBar">
        <item name="android:windowBackground">@color/primary</item>
    </style>

    <!--<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/primaryDarkVariant</item>
        <item name="android:textColorSecondary">@color/primaryDarkVariant</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:colorBackground">@color/primaryDarkVariant</item>
        <item name="android:textColor">@color/primaryDarkVariant</item>
    </style>

    <!--<style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">-->
    <style name="AlertDialogCustom" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/primaryDarkVariant</item>
        <item name="colorPrimaryDark">@color/secondary</item>
        <item name="android:windowTitleStyle">@style/AlertDialogTitle</item>
    </style>

    <style name="AlertDialogTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryDarkVariant</item>
        <item name="android:textAppearance">@style/AppTheme.TextAppearance</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">16sp</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">56dp</item><!-- item size in menu-->
        <item name="listPreferredItemHeightSmall">56dp</item><!-- item size in menu-->
    </style>
</resources>
