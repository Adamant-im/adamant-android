<resources>
    <!-- Base application theme. -->
    <style name="BaseAdamantLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDarkVariant</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/AdamantLight.TextAppearance</item>
        <item name="alertDialogTheme">@style/AdamantLight.AlertDialogCustom</item>
        <item name="alertDialogStyle">@style/AdamantLight.AlertDialogCustom</item>
        <item name="bottomSheetDialogTheme">@style/AdamantLight.BaseBottomSheetDialog</item>
    </style>

    <style name="AdamantLight" parent="BaseAdamantLight" />

    <style name="AdamantLight.PincodeTheme" parent="AdamantLight">
        <item name="colorAccent">@color/primaryDarkVariant</item>
    </style>

    <style name="AdamantLight.BaseTextAppearance" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/onPrimary</item>
    </style>

    <style name="AdamantLight.TextAppearance" parent="AdamantLight.BaseTextAppearance"/>

    <style name="AdamantLight.BaseTextViewHeader">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AdamantLight.TextViewHeader" parent="AdamantLight.BaseTextViewHeader" />

    <style name="AdamantLight.TextViewSubHeader">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AdamantLight.TextViewNormal">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AdamantLight.BaseTextViewNormalEnlargedBold" parent="AdamantLight.TextViewNormal">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AdamantLight.TextViewNormalEnlargedBold" parent="AdamantLight.BaseTextViewNormalEnlargedBold" />

    <style name="AdamantLight.TextViewOverLine">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textMuted</item>
    </style>

    <style name="AdamantLight.TextViewEnlargedOverLine" parent="AdamantLight.TextViewOverLine">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AdamantLight.TextViewHeadline" parent="AdamantLight.TextViewSubHeader">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AdamantLight.BaseButtonTextAppearance" parent="AdamantLight.TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AdamantLight.ButtonTextAppearance" parent="AdamantLight.BaseButtonTextAppearance"/>

    <style name="AdamantLight.TextFloatLabelAppearance" parent="TextAppearance.Design.Hint">
        <!-- Floating label appearance here -->
        <item name="android:textColor">@color/textMuted</item>
    </style>

    <style name="AdamantLight.TextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/textMuted</item>
        <!--<item name="boxStrokeWidth">2dp</item>-->
        <item name="hintTextAppearance">@style/AdamantLight.TextFloatLabelAppearance</item>
    </style>

    <style name="AdamantLight.EditTextInput" parent="AdamantLight.TextViewNormal">
        <item name="android:textColorHint">@color/textMuted</item>
    </style>

    <!--TODO: Uncomment when you need to adjust the thickness of the underscore-->
    <!--<style name="AdamantLight.FlatEditTextInput" parent="AdamantLight.TextViewSubHeader">-->
        <!--<item name="android:textColorHint">@color/strokeDark</item>-->
        <!--<item name="android:textColor">@color/onPrimary</item>-->
        <!--<item name="android:background">@color/text_input_2_background</item>-->
    <!--</style>-->

    <style name="AdamantLight.FlatEditTextInputTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textViewStyle">@style/AdamantLight.TextViewSubHeader</item>
        <item name="colorAccent">@color/textMuted</item>
        <item name="colorControlNormal">@color/textMuted</item>
        <item name="colorControlActivated">@color/secondaryLightVariant</item>
    </style>

    <style name="AdamantLight.FlatTextInputLayoutStyle">
        <item name="android:textColorHint">@color/textMuted</item>
        <item name="hintTextAppearance">@style/AdamantLight.TextFloatLabelAppearance</item>
    </style>

    <style name="AdamantLight.BasePrimaryButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/AdamantLight.ButtonTextAppearance</item>
        <item name="android:textColor">@drawable/secondary_button_selector_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/background</item>
        <item name="backgroundTint">@color/background</item>
        <item name="iconTint">@drawable/secondary_button_selector_text</item>
        <item name="strokeColor">@color/strokeDark</item>
    </style>

    <style name="AdamantLight.PrimaryButton" parent="AdamantLight.BasePrimaryButton"/>

    <style name="AdamantLight.BaseFlatIconButton" parent="@style/Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textAppearance">@style/AdamantLight.ButtonTextAppearance</item>
        <item name="android:textColor">@drawable/secondary_button_selector_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="cornerRadius">@dimen/main_button_radius</item>
        <item name="strokeColor">@color/strokeDark</item>
    </style>

    <style name="AdamantLight.FlatIconButton" parent="AdamantLight.BaseFlatIconButton"/>

    <style name="AdamantLight.FlatTextButton" parent="@style/Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textAppearance">@style/AdamantLight.ButtonTextAppearance</item>
        <item name="android:textColor">@drawable/flat_button_selector_text</item>
    </style>

    <style name="AdamantLight.ImageButton" parent="@style/Widget.MaterialComponents.Button.TextButton"/>

    <style name="AdamantLight.BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dialog_background</item>
    </style>

    <style name="AdamantLight.BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/AdamantLight.BottomSheet</item>
        <item name="colorAccent">@color/textMuted</item>
    </style>


    <style name="AdamantLight.WithActionBar" parent="AdamantLight">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="alertDialogTheme">@style/AdamantLight.AlertDialogCustom</item>
        <item name="alertDialogStyle">@style/AdamantLight.AlertDialogCustom</item>
    </style>

    <style name="AdamantLight.Launcher" parent="AdamantLight.WithActionBar">
        <item name="android:windowBackground">@color/primary</item>
    </style>

    <!--<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">-->
    <style name="AdamantLight.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/onPrimary</item>
        <item name="android:textColorSecondary">@color/onSecondary</item>
    </style>

    <style name="AdamantLight.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColor">@color/onPrimary</item>
    </style>

    <style name="AdamantLight.AlertDialogCustom" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:textColorPrimary">@color/onPrimary</item>
        <item name="colorPrimaryDark">@color/secondary</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="android:windowTitleStyle">@style/AdamantLight.AlertDialogTitle</item>
        <item name="materialButtonStyle">@style/AdamantLight.FlatIconButton</item>
        <item name="buttonBarButtonStyle">@style/AdamantLight.FlatIconButton</item>
        <item name="android:buttonBarStyle">@style/AdamantLight.FlatIconButton</item>
    </style>

    <style name="AdamantLight.AlertDialogTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textAppearance">@style/AdamantLight.TextAppearance</item>
    </style>

    <style name="AdamantLight.NavigationDrawerStyle">
        <item name="android:textSize">16sp</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">56dp</item><!-- item size in menu-->
        <item name="listPreferredItemHeightSmall">56dp</item><!-- item size in menu-->
    </style>

    <style name="AdamantLight.TableRowStyle">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_height">@dimen/tablerow_default_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>