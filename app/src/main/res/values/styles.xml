<resources>

    <!-- Base application theme. -->
    <style name="AdamantLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDarkVariant</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/AdamantLight.TextAppearance</item>
        <item name="alertDialogTheme">@style/AdamantLight.AlertDialogCustom</item>
        <item name="alertDialogStyle">@style/AdamantLight.AlertDialogCustom</item>
        <item name="bottomSheetDialogTheme">@style/AdamantLight.BaseBottomSheetDialog</item>+
    </style>

    <style name="AdamantLight.TextAppearance" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AdamantLight.TextAppearance.Inverse" parent="@android:style/TextAppearance.Inverse">
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="AdamantLight.ButtonTextAppearance" parent="AdamantLight.TextAppearance">
        <item name="fontWeight">300</item>
    </style>

    <style name="AdamantLight.TextViewHeader">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AdamantLight.TextViewNormal">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AdamantLight.TextViewOverLine">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">10sp</item>
    </style>


    <style name="AdamantLight.ActivePrimaryButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/AdamantLight.ButtonTextAppearance</item>
        <!--<item name="backgroundTint">@color/secondary</item>-->
        <item name="android:textColor">@drawable/primary_button_selector_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="cornerRadius">@dimen/main_button_height</item>
        <item name="android:lineSpacingExtra">16sp</item>
    </style>

    <style name="AdamantLight.ActiveSecondaryButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/AdamantLight.ButtonTextAppearance</item>
        <!--<item name="android:backgroundTint">@drawable/secondary_button_selector_background</item>-->
        <item name="android:textColor">@drawable/secondary_button_selector_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="cornerRadius">@dimen/main_button_height</item>
        <item name="strokeColor">@color/strokeDark</item>
    </style>

    <style name="AdamantLight.FlatIconButton" parent="@style/Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textAppearance">@style/AdamantLight.ButtonTextAppearance</item>
        <!--<item name="android:backgroundTint">@drawable/secondary_button_selector_background</item>-->
        <item name="android:textColor">@drawable/secondary_button_selector_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="cornerRadius">@dimen/main_button_height</item>
        <item name="strokeColor">@color/strokeDark</item>
    </style>

    <style name="AdamantLight.ImageButton" parent="@style/Widget.MaterialComponents.Button.TextButton">

    </style>

    <style name="AdamantLight.BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dialog_background</item>
    </style>

    <style name="AdamantLight.BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/AdamantLight.BottomSheet</item>
        <item name="colorAccent">@color/inactiveInputOutline</item>
    </style>


    <style name="AdamantLight.WithActionBar" parent="AdamantLight">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="alertDialogTheme">@style/AdamantLight.AlertDialogCustom</item>
        <item name="alertDialogStyle">@style/AdamantLight.AlertDialogCustom</item>
    </style>

    <style name="AdamantLight.Launcher" parent="AdamantLight.WithActionBar">
        <item name="android:windowBackground">@color/primary</item>
    </style>

    <!--<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">-->
    <style name="AdamantLight.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/onPrimary</item>
        <item name="android:textColorSecondary">@color/onSecondary</item>
    </style>

    <style name="AdamantLight.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColor">@color/onPrimary</item>
    </style>

    <style name="AdamantLight.AlertDialogCustom" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:textColorPrimary">@color/onPrimary</item>
        <item name="colorPrimaryDark">@color/secondary</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="android:windowTitleStyle">@style/AdamantLight.AlertDialogTitle</item>
        <item name="materialButtonStyle">@style/AdamantLight.FlatIconButton</item>
        <item name="buttonBarButtonStyle">@style/AdamantLight.FlatIconButton</item>
        <item name="android:buttonBarStyle">@style/AdamantLight.FlatIconButton</item>
    </style>

    <style name="AdamantLight.AlertDialogTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textAppearance">@style/AdamantLight.TextAppearance</item>
    </style>

    <style name="AdamantLight.NavigationDrawerStyle">
        <item name="android:textSize">16sp</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">56dp</item><!-- item size in menu-->
        <item name="listPreferredItemHeightSmall">56dp</item><!-- item size in menu-->
    </style>

    <style name="AdamantLight.TableRowStyle">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_height">@dimen/tablerow_default_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
