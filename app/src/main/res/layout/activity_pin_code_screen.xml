<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background"
    tools:context=".ui.PincodeScreen">

    <ScrollView
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/activity_pin_code_pb_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:indeterminate="true"
                android:secondaryProgress="50"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--<com.app.adprogressbarlib.AdCircleProgress-->
                <!--android:id="@+id/activity_pincode_iv_profile_image"-->
                <!--android:layout_width="84dp"-->
                <!--android:layout_height="84dp"-->
                <!--android:backgroundTintMode="add"-->
                <!--app:adpgb_finished_color="@color/secondary"-->
                <!--app:adpgb_unfinished_color="@android:color/white"-->
                <!--custom:adpgb_finished_stroke_width="5dp"-->
                <!--custom:adpgb_inner_drawable="@drawable/ic_welcome_card1"-->
                <!--custom:adpgb_show_text="false"-->
                <!--custom:adpgb_unfinished_stroke_width="5dp"-->
                <!--android:layout_marginTop="24dp"-->
                <!--app:layout_constraintEnd_toEndOf="parent"-->
                <!--app:layout_constraintStart_toStartOf="parent"-->
                <!--app:layout_constraintTop_toBottomOf="@+id/activity_pin_code_pb_progress"/>-->

            <ImageView
                android:id="@+id/activity_pincode_iv_profile_image"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_below="@+id/activity_pin_code_pb_progress"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_pin_code_pb_progress"
                app:srcCompat="@drawable/ic_welcome_card1" />

            <TextView
                android:id="@+id/activity_pincode_tv_suggestion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_pincode_iv_profile_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/activity_pincode_enter_pincode"
                android:textColor="@color/onBackground"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_pincode_iv_profile_image" />

            <com.andrognito.pinlockview.IndicatorDots
                android:id="@+id/activity_pincode_id_indicator_dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_pincode_tv_suggestion"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                app:dotFilledBackground="@drawable/pincode_dot"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_pincode_tv_suggestion" />

            <TextView
                android:id="@+id/activity_pincode_tv_error"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_pincode_id_indicator_dots"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:maxLines="3"
                android:textColor="@color/error"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_pincode_id_indicator_dots" />

            <com.andrognito.pinlockview.PinLockView
                android:id="@+id/activity_pincode_plv_keyboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_pincode_tv_error"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="24dp"
                app:keypadButtonSize="72dp"
                app:keypadDeleteButtonDrawable="@drawable/ic_backspace"
                app:keypadShowDeleteButton="true"
                app:keypadTextColor="@color/onBackground"
                app:keypadTextSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_pincode_tv_error" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</RelativeLayout>

