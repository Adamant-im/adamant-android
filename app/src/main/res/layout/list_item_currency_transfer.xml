<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/list_item_currency_transfer_tv_abbr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_currency_transfer_tv_address"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/list_item_currency_transfer_tv_title"
        app:layout_constraintStart_toStartOf="@+id/list_item_currency_transfer_tv_title"
        app:layout_constraintTop_toBottomOf="@+id/list_item_currency_transfer_tv_title" />

    <TextView
        android:id="@+id/list_item_currency_transfer_tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_currency_transfer_tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/list_item_currency_transfer_tv_title" />

    <TextView
        android:id="@+id/list_item_currency_transfer_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_currency_transfer_tv_abbr"
        app:layout_constraintEnd_toStartOf="@+id/list_item_currency_transfer_tv_amount"
        app:layout_constraintStart_toEndOf="@+id/list_item_currency_transfer_tv_abbr"
        app:layout_constraintTop_toTopOf="@+id/list_item_currency_transfer_tv_abbr" />
</androidx.constraintlayout.widget.ConstraintLayout>